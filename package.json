{
  "name": "base64-ts",
  "version": "0.0.2",
  "description": "A Base64 encoder/decoder written in TypeScript.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --config jestconfig.json",
    "prepare" : "npm run build",
    "prepublishOnly" : "npm test && npm run lint",
    "preversion" : "npm run lint",
    "version" : "npm run format && git add -A src",
    "postversion" : "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/takahashi-akari/base64-ts.git"
  },
  "keywords": [
    "base64",
    "encode",
    "decode",
    "typescript"
  ],
  "author": "Takahashi Akari <akaritakahashioss@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/takahashi-akari/base64-ts/issues"
  },
  "homepage": "https://github.com/takahashi-akari/base64-ts#readme",
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "jest": "^29.4.3",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.9.5"
  },
  "files": [
    "lib/**/*"
  ]
}
